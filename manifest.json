{
    "manifest_version": 3,
    "name": "Saleshorts",
    "background": {
        "service_worker": "js/background.js",
        "type": "module"
    },
    "description": "Extension for Salesforce Lightning keyboard shortcuts",
    "version": "1.0",
    "action": {
        "default_icon": "img/icon.png",
        "default_popup": "popup.html"
    },
    "permissions": [
        "tabs",
        "storage"
    ],
    "host_permissions": [
        "*://*/*"
    ],
    "icons": {
        "16": "img/icon.png",
        "32": "img/icon.png",
        "48": "img/icon.png",
        "128": "img/icon.png"
    },
    "commands": {
        "openInsp": {
            "suggested_key": {
                "default": "Alt+Q"
            },
            "description": "Open Salesforce Inspector"
        },
        "openSetup": {
            "suggested_key": {
                "default": "Alt+W"
            },
            "description": "Open Salesforce Setup"
        },
        "openDevConsole": {
            "suggested_key": {
                "default": "Alt+A"
            },
            "description": "Open Salesforce Developer Console"
        },
        "duplicateTab": {
            "suggested_key": {
                "default": "Alt+D"
            },
            "description": "Duplicate the current tab"
        },
        "openDataExport": {
            "description": "Open the sf inspector data export"
        }
    }
}
