{
    "manifest_version": 2,
    "name": "Saleshorts",
    "background": {
        "scripts": ["js/background.js"]
    },
    "description": "Extension for Salesforce Lightning keyboard shortcuts",
    "version": "1.0",

    "browser_action": {
        "default_icon": "img/icon.png",
        "default_popup": "popup.html"
    },
    "permissions": ["tabs", "<all_urls>", "storage"],
    "commands": {
        "openInsp": {
            "suggested_key": {
                "default": "Alt+Q"
            },
            "description": "Open Salesforce Inspector"
        },
        "openSetup": {
            "suggested_key": {
                "default": "Alt+W"
            },
            "description": "Open Salesforce Setup"
        },
        "openDevConsole": {
            "suggested_key": {
                "default": "Alt+A"
            },
            "description": "Open Salesforce Developer Console"
        },
        "duplicateTab": {
            "suggested_key": {
                "default": "Alt+D"
            },
            "description": "Duplicate the current tab"
        },
        "openDataExport": {
            "description": "Open the sf inspector data export"
        }
    }
}